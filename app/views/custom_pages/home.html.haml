.front_page_strip
.row.home_page_row
  .span4
    .service_times
      %br
      %br
      %br
      %h5 Meeting Times
      %ul
        %li
          %h3 Sunday Morning
          9:30 AM Worship
          %br
          10:30 AM Bible Study
        %li
          %h3 Sunday Evening
          5:00 PM Worship
        %li
          %h3 Wednesday Evening
          7:00 PM Bible Study
      %span.assembly_text Assembling regularly at 380 Hickory Road, Gardendale, AL (click here for map)
  .span8
    #carousel.carousel
      .carousel-inner
        - @carousel_images.each_with_index do |carousel_image, index|
          .item{:class => "#{index == 0 ? "active" : ""}"}
            =image_tag carousel_image.image.url(:original)
            .carousel-caption
              %h4=carousel_image.header
              %p=carousel_image.caption
-content_for :javascripts do
  :javascript
    $(document).ready(function() {
      $('#carousel').carousel({
        interval: 2000
      })
    })
