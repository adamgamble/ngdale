%h1= @sermon.name
%h3= link_to "Edit Sermon", edit_admin_sermon_path(@sermon)

#jplayer
%ul
  %li=@sermon.date.strftime("%m-%d-%y")
  %li=@sermon.name
  %li=@sermon.preacher
:javascript
  var global_lp = 0;
  var global_ready = 0;
  $("#jplayer").jPlayer({
    ready: function ()
    {
      $(this).jPlayer("setMedia", {mp3: '#{@sermon.sermon.url}'});
    }
  });
