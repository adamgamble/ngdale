!!!
%html
  %head
    %title NgdaleReading
    :plain
      <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>
    = stylesheet_link_tag    "application"
    = stylesheet_link_tag    "custom_pages"
    = javascript_include_tag "application"
    = csrf_meta_tags
    :plain
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          =link_to "North Gardendale church of Christ", "/", :class => "brand"
          %ul.nav
            %li
              =link_to "Home", "/", :class => "btn disabled"
            %li
              =link_to "About Us", "#"
            %li
              =link_to "Services", "#"
            %li
              =link_to "Directions", "#"
            %li
              =link_to "Members", "/members"
            %li
              =link_to "Resources", "#"
            %li
              =link_to "Contact Us", "#"
    .container
      .main_header
        -if flash.any?
          .container
            -if flash[:alert]
              .alert.alert-error
                %a.close{"data-dismiss" => "alert"}x
                = flash[:alert]
            -if flash[:notice] 
              .alert.alert-success
                %a.close{"data-dismiss" => "alert"}x
                = flash[:notice]
            -if flash[:error] 
              .alert.alert-error
                %a.close{"data-dismiss" => "alert"}x
                = flash[:error]
      .content
        = yield
    = javascript_include_tag "application"
    = yield :javascripts
